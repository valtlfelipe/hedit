{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hedit",
  "version": "0.1.0",
  "identifier": "com.felipevm.hedit",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "sudo-cp",
          "cmd": "sudo",
          "args": [
            "cp",
            {
              "validator": "\\S+"
            },
            "/etc/hosts"
          ]
        }
      ]
    }
  }
}