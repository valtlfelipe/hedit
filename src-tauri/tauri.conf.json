{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hedit",
  "version": "0.0.0",
  "identifier": "com.felipevm.hedit",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "publisher": "FVM",
    "license": "MIT",
    "copyright": "FVM - Hedit",
    "homepage": "https://hedit.app",
    "category": "DeveloperTool",
    "longDescription": "The modern hosts file editor for people who care about their tools.",
    "shortDescription": "Manage your hosts file with ease.",
    "active": true,
    "targets": [
      "app",
      "dmg",
      "deb",
      "appimage",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  },
  "plugins": {}
}